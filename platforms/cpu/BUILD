# Package overview.
# How are CPUs intended to be used and extended? Explain how they are shared
# between compilers and platforms.
package(default_visibility = ["//visibility:public"])

# CPU overview.
# What features it has? What is a cortex processor? What is a M4? Does it have
# an FPU? Does it have NEON instructions? What over ARM extensions does it
# support?
constraint_value(
  name = "cortex_m4f",
  constraint_setting = "@platforms//cpu",
)

constraint_value(
  name = "cortex_m33f",
  constraint_setting = "@platforms//cpu",
)

constraint_value(
  name = "cortex_m0+",
  constraint_setting = "@platforms//cpu",
)
